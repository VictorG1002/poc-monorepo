{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local" , "./packages/ui/my-lib"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"]
  },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}