{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
       "globalDependencies": [
        "my-lib"
      ]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"]
  },
    "dev": {
      "cache": false,
      "persistent": true
    }

  
  }
}